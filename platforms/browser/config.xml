<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.intra" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Phonegap News [material]</name>
    <description>
        A basic template for PhoneGap.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <splash platform="android" qualifier="port-ldpi" src="res/screen/android/drawable-port-hdpi-screen.png" />
    <splash platform="android" qualifier="port-mdpi" src="res/screen/android/drawable-port-hdpi-screen.png" />
    <splash platform="android" qualifier="port-hdpi" src="res/screen/android/drawable-port-hdpi-screen.png" />
    <splash platform="android" qualifier="port-xhdpi" src="res/screen/android/drawable-port-xhdpi-screen.png" />
    <splash platform="android" qualifier="port-xxhdpi" src="res/screen/android/drawable-port-xxhdpi-screen.png" />
    <splash platform="android" qualifier="port-xxxhdpi" src="res/screen/android/drawable-port-xxxhdpi-screen.png" />
    <splash platform="android" qualifier="land-ldpi" src="res/screen/android/drawable-port-ldpi-screen.png" />
    <splash platform="android" qualifier="land-mdpi" src="res/screen/android/drawable-port-mdpi-screen.png" />
    <splash platform="android" qualifier="land-hdpi" src="res/screen/android/drawable-port-hdpi-screen.png" />
    <splash platform="android" qualifier="land-xhdpi" src="res/screen/android/drawable-port-xhdpi-screen.png" />
    <splash platform="android" qualifier="land-xxhdpi" src="res/screen/android/drawable-port-xxhdpi-screen.png" />
    <splash platform="android" qualifier="land-xxxhdpi" src="res/screen/android/drawable-port-xxxhdpi-screen.png" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="orientation" value="portrait" />
    <preference name="SplashScreen" value="splash" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarBackgroundColor" value="#00624e" />
</widget>
